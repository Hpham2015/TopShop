<% include partials/header %>
<div class="container border border-dark rounded mx-auto">
  <form class="vehiclecreationform" action="/createcustomer" method="POST">
    <div class="form-group">
        <label for="customerID">Customer ID</label>
        <input type="text" class="form-control" name="customerID" placeholder="Ex. FPU839GN1W" 
        style="text-transform:uppercase" minlength="10" maxlength="10" required>
    </div>
    <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" class="form-control" name="firstName" placeholder="Ex. John" required>
    </div>
    <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" class="form-control" name="lastName" placeholder="Ex. Smith" required>
    </div>
    <div class="form-group">
        <label for="address">Home Address</label>
        <input type="text" class="form-control" name="address" placeholder="Ex. 1324 Apple St." required>
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" name="city" placeholder="Ex. Santa Cruz" required>
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input type="text" class="form-control" name="state" placeholder="California" required>
    </div>
    <div class="form-group">
        <label for="zip">Zip</label>
        <input type="number" class="form-control" name="zip" placeholder="Ex. 95060" 
        minlength="5" maxlength="5" required>
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" name="email" placeholder="Ex. johnsmith@email.com" required>
    </div>
    <div class="form-group">
        <label for="cell">Cell Phone</label>
        <input type="number" class="form-control" name="cell" placeholder="Ex. (831)347-5839" 
        minlength="10" maxlength="10" required>
    </div>
    <div class="form-group">
        <label for="work">Work Phone</label>
        <input type="number" class="form-control" name="work" placeholder="Ex. (831)347-5839" 
        minlength="10" maxlength="10" required>
    </div>
    <button class="btn btn-primary" type="submit">Create Customer</button>
  </form>
</div>
<% include partials/footer %>
