<% include partials/header %>

<!-- Technition ID & Name -->
<div class="container-fluid">
    
  <div class="jumbotron jumbotron-fluid border border-dark rounded">
    <div class="container-fluid">
      <h1 class="display-4 text-center">Repair Order Form</h1>
    </div>
  </div>
      
  <!--Section for Customer Info-->
  <div class="container border border-dark rounded mx-auto">
    <h3 class="group-label">Customer Info</h3>  
  
    <div class="form-row">
      <div class="col-md-4 mb-3">
        <label for="CustomerID">Customer ID</label>
        <div class="input-group">
          <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupPrepend">ID</span>
          </div>
          <input type="text" class="form-control" id="customerID" placeholder="FJ39HG13KQ" 
          style="text-transform:uppercase" minlength="10" maxlength="10" aria-describedby="inputGroupPrepend" readonly>
        </div>
      </div>
      <div class="col-md-4 mb-3">
        <label for="FirstName">First name</label>
        <input type="text" class="form-control" id="firstname" placeholder="John"  readonly>
      </div>
      <div class="col-md-4 mb-3">
        <label for="LastName">Last name</label>
        <input type="text" class="form-control" id="lastname" placeholder="Smith"  readonly>
      </div>
    </div>
    <div class="form-row">
      <div class="col-md-3 mb-3">
        <label for="Street">Street</label>
        <input type="text" class="form-control" id="Street" placeholder="1342 Baseline Rd" readonly>
      </div>
      <div class="col-md-3 mb-3">
        <label for="City">City</label>
        <input type="text" class="form-control" id="City" placeholder="Santa Cruz" readonly>
      </div>
      <div class="col-md-3 mb-3">
        <label for="State">State</label>
        <input type="text" class="form-control" id="State" placeholder="CA" 
        minlength="2" maxlength="2" readonly>
      </div>
      <div class="col-md-3 mb-3">
        <label for="Zip">Zip</label>
        <input type="number" minlength="5" maxlength="5" class="form-control" id="zip" placeholder="95060" readonly>
      </div>
      <div class="col-md-3 mb-3">
        <label for="email">Email</label>
        <input type="email" class="form-control" id="email" placeholder="johnsmith@email.com" readonly>
      </div>    
      <div class="col-md-3 mb-3">
        <label for="Cell">Cell Phone</label>
        <input type="tel" minlength="10" maxlength="10" class="form-control" id="cell" placeholder="8312435594" readonly>
      </div>    
      <div class="col-md-3 mb-3">
        <label for="Work">Work Phone</label>
        <input type="tel" minlength="10" maxlength="10" class="form-control" id="work" placeholder="8312435594" readonly>
      </div>    
    </div>
    
    <h3 class="group-label">Vehicle Info</h3>    
      <div class="form-row">
        <div class="col-md-3 mb-3">
          <label for="Year/Model/Make">Year/Model/Make</label>
            <input type="text" aria-label="Year/Model/Mak" class="form-control" readonly>
        </div>
        <div class="col-md-3 mb-3">
          <label for="Mileage">Mileage</label>
            <input type="text" aria-label="Mileage" class="form-control" readonly>
        </div>
        <div class="col-md-3 mb-3">
          <label for="VIN">VIN</label>
            <input type="text" aria-label="VIN" class="form-control" readonly>
        </div>
        <div class="col-md-3 mb-3">
          <label for="License">License</label>
            <input type="text" aria-label="License" class="form-control" readonly>
        </div>
      </div>
  
    <h3 class="group-label">Mechanic Info</h3>    
      <div class="form-row">
        <div class="col-md-4 mb-3">
          <label for="CustomerID">Mechanic ID</label>
          <div class="input-group">
            <div class="input-group-prepend">
              <span class="input-group-text" id="inputGroupPrepend">ID</span>
            </div>
            <input type="text" class="form-control" id="customerID" placeholder="ER96JBFI74" 
            style="text-transform:uppercase" minlength="10" maxlength="10" aria-describedby="inputGroupPrepend" readonly>
          </div>
        </div>
        <div class="col-md-4 mb-3">
          <label for="FirstName">First name</label>
          <input type="text" class="form-control" id="firstname" placeholder="Jane"  readonly>
        </div>
        <div class="col-md-4 mb-3">
          <label for="LastName">Last name</label>
          <input type="text" class="form-control" id="lastname" placeholder="Doe"  readonly>
        </div>
      </div>
      
    <button class="btn btn-primary" type="button">Vehicle Inspection Form</button>
  </div>
  
  
  <div class="container border border-dark rounded mx-auto"> 
    <h3 class="group-label">Repairs</h3>    
    <form>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Repair Type</th>
            <th scope="col">Repair</th>
            <th scope="col">Comments</th>
            <th scope="col">Cost</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th scope="row">1</th>
            <td> 
              <select class="custom-select" id="job_1_repair_type" required>
                <option value="">Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
              </select>
            </td>
            <td>  <input type="text" class="form-control" id="job_1_repair" required> </td> 
            <td>  <input type="text" class="form-control" id="job_1_comments" required> </td>
            <td>  <input type="number" class="form-control" id="job_1_cost" required>  </td>
          </tr>
          <tr>
            <th scope="row">2</th>
            <td> 
            <select class="custom-select" id="job_2_repair_type" required>
                <option value="">Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
              </select>
            </td>
            <td>  <input type="text" class="form-control" id="job_2_repair" required> </td> 
            <td>  <input type="text" class="form-control" id="job_2_comments" required> </td>
            <td>  <input type="number" class="form-control" id="job_2_cost" required>  </td>
          </tr>
          <tr>
            <th scope="row">3</th>
            <td> 
            <select class="custom-select" id="job_3_repair_type" required>
                <option value="">Choose...</option>
                <option value="1">One</option>
                <option value="2">Two</option>
                <option value="3">Three</option>
                <option value="4">Four</option>
              </select>
            </td>
            <td>  <input type="text" class="form-control" id="job_3_repair" required> </td> 
            <td>  <input type="text" class="form-control" id="job_3_comments" required> </td>
            <td>  <input type="number" class="form-control" id="job_3_cost" required>  </td>
          </tr>
        </tbody>
      </table>
    <h5 class="group-label">Total Cost:  </h2> <input type="number"class="form-control" id="total_cost"readonly>
    <button type="submit" class="btn btn-primary btn-lg mt-2">Inspection Complete</button>
    </form>

  </div>
</div>
<% include partials/footer %>
